<!-- For proper laser scan visualization in gazebo:
	export LIBGL_ALWAYS_SOFTWARE=1
--> 


<launch>
<arg name="base"/> 
  <!-- load configuration -->
  <rosparam command="load" file="$(find elektron_control)/config/elektron_control.yaml" />
<!-- spawn controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/$(arg base)" args="joint_state_controller mobile_base_controller"/>
 <!-- avaliable wheel position controllers: left_wheel_position_controller right_wheel_position_controller. mobile_base_controller does not cooperate with position controllers -->
 
<node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="30.0" />
<remap from="/joint_states" to="$(arg base)/joint_states"/>
  </node>
</launch>
